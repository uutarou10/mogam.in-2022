// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Media {
  id       Int       @id @default(autoincrement())
  name     String
  url      String
  articles Article[]
}

model Article {
  id      Int     @id @default(autoincrement())
  title   String
  body    String?
  media   Media   @relation(fields: [mediaId], references: [id])
  mediaId Int
  url     String  @unique
}
